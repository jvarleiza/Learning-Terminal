<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
  <!-- Create the tabs -->
  <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
    <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-filter"></i></a></li>
    <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
  </ul>
  <!-- Tab panes -->
  <div class="tab-content">
    <!-- Home tab content -->
    <div class="tab-pane active" id="control-sidebar-home-tab">
      <h3 class="control-sidebar-heading"><%= t('Set Filters') %></h3>
      <p id="aux"></p>
      <div class="form-group">
        <label><%= t('Country') %></label>
        <select id="countries-filter-select" class="form-control">
          <% @countries.each do |key, value| %>
            <% if key == cookies[:country_code] %>
              <option selected="selected" value="<%= key %>"><%= value %></option>
            <% else %>
              <option value="<%= key %>"><%= value %></option>
            <% end %>  
        	<% end %>
        </select>
        <br/>
        <label><%= t('Building type') %></label>
        <select id="business-unit-filter-select"class="form-control">
           <% @business_units.each do |key, value| %>
            <% if key == cookies[:business_unit_code] %>
              <option selected="selected" value="<%= key %>"><%= value %></option>
            <% else %>
              <option value="<%= key %>"><%= value %></option>
            <% end %>  
        	<% end %>
        </select>
      </div>
    </div>
    
    <div class="tab-pane" id="control-sidebar-stats-tab"><%= t('Set Filters') %></div>
    <div class="tab-pane" id="control-sidebar-settings-tab">
    </div>
  </div>
</aside>
<!-- /.control-sidebar -->
<!-- Add the sidebar's background. This div must be placed
     immediately after the control sidebar -->
<div class="control-sidebar-bg"></div>