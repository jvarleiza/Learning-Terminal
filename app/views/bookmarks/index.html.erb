<div class="content-wrapper">
  <%= render "/shared/page_header" %>
  
  <section class="content">
    <div class="titles-custom">
      <h1><%= t('Bookmarks') %></h1>
    </div>
    
    <% if @roles_results.empty? && @processes_results.empty? && @tasks_results.empty? %>
      <%= print_no_content_message 'You have no bookmarks' %>
    <% else %>
      <% if !@roles_results.empty? %>
        <h2><%= t('Roles') %></h2>
        <div class="row">
          <div class="col-lg-12 col-xs-12">
            <div class="box box-widget">
              <% @roles_results.each do |role| %>
                <div class="box-body">
                  <h4 class="attachment-heading"><a href="<%= role[:url] %>"><%= role[:name] %> <small>(<%= t(@languages[role[:locale]]) %>)</small></a></h4>
                  <div class="attachment-text"><%= role[:description] %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if !@processes_results.empty? %>
        <h2><%= t('Processes') %></h2>
        <div class="row">
          <div class="col-lg-12 col-xs-12">
            <div class="box box-widget">
              <% @processes_results.each do |process| %>
                <div class="box-body">
                  <h4 class="attachment-heading"><a href="<%= process[:url] %>"><%= process[:name] %> <small>(<%= t(@languages[process[:locale]]) %>)</small></a></h4>
                  <div class="attachment-text"><%= process[:description] %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <% if !@tasks_results.empty?  %>
        <h2><%= t('Tasks') %></h2>
        <div class="row">
          <div class="col-lg-12 col-xs-12">
            <div class="box box-widget">
              <% @tasks_results.each do |task| %>
                <div class="box-body">
                  <h4 class="attachment-heading"><a href="<%= task[:url] %>"><%= task[:name] %> <small>(<%= t(@languages[task[:locale]]) %>)</small></a></h4>
                  <div class="attachment-text"><%= task[:description] %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </section>
</div>