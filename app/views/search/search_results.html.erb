<div class="content-wrapper">
  <%= render "/shared/page_header" %>
  
  <section class="content">
    <% if @roles_results.empty? && @processes_results.empty? && @tasks_results.empty? %>
      <h1><%= t('No results where found') %></h1>
    <% else %>
      <% if !@roles_results.empty? %>
        <h1><%= t('Roles that matched') %>... "<%= @query %>"</h1>
        <div class="row">
            <div class="col-lg-12 col-xs-12">
              <div class="box box-widget">
                <% @roles_results.each do |role| %>
                    <div class="box-body">
                        <h4 class="attachment-heading"><a href="<%= role[:url] %>"><%= role[:name] %></a></h4>
                        <div class="attachment-text"><%= role[:description] %></div>
                    </div>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
      
      <% if !@processes_results.empty? %>
        <h1><%= t('Processes that matched') %>... "<%= @query %>"</h1>
        <div class="row">
            <div class="col-lg-12 col-xs-12">
              <div class="box box-widget">
                <% @processes_results.each do |process| %>
                    <div class="box-body">
                        <h4 class="attachment-heading"><a href="<%= process[:url] %>"><%= process[:name] %></a></h4>
                        <div class="attachment-text"><%= process[:description] %></div>
                    </div>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
      
      <% if !@tasks_results.empty? %>
        <h1><%= t('Tasks that matched') %>... "<%= @query %>"</h1>
        <div class="row">
            <div class="col-lg-12 col-xs-12">
              <div class="box box-widget">
                <% @tasks_results.each do |task| %>
                    <div class="box-body">
                        <h4 class="attachment-heading"><a href="<%= task[:url] %>"><%= task[:name] %></a></h4>
                        <div class="attachment-text"><%= task[:description] %></div>
                    </div>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </section>
</div>